
<div class="container">
<h1>Restaurants</h1>


  <ul>
    
    <% @restaurants.each do |restaurant| %>
      <li>
        <%= link_to "#{restaurant.name} - Address: #{restaurant.address} - Category: #{restaurant.category}", restaurant_path(restaurant)  %>
      </li>
    <% end %>


  </ul>
  <%= link_to 'New Restaurant', new_restaurant_path %>
</div>